generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String?
  email String @unique
  phoneNumber String? @unique
  posts Post[]
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}